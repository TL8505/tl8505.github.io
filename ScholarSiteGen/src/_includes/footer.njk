<footer class="site-footer">
  <div class="footer-content">
    <div class="footer-info">
      <p>&copy; {{ site.year }} {{ site.title }}. All rights reserved.</p>
      <p>Built with <a href="https://11ty.dev">Eleventy</a></p>
    </div>
    <div class="footer-links">
      {% if site.email %}<a href="mailto:{{ site.email }}">Email</a>{% endif %}
      {% if site.orcid %}<a href="https://orcid.org/{{ site.orcid }}">ORCID</a>{% endif %}
      {% if site.github %}<a href="https://github.com/{{ site.github }}">GitHub</a>{% endif %}
      {% if site.twitter %}<a href="https://twitter.com/{{ site.twitter }}">Twitter</a>{% endif %}
    </div>
  </div>
</footer>