---
layout: base.njk
---

<article class="teaching-page">
  <header class="teaching-header">
    <h1>{{ title }}</h1>
    {% if course_code %}
    <div class="course-meta">
      <span class="course-code">{{ course_code }}</span>
      {% if semester %}<span class="semester">{{ semester }}</span>{% endif %}
      {% if role %}<span class="role">{{ role }}</span>{% endif %}
    </div>
    {% endif %}
  </header>
  <div class="teaching-content">
    {{ content | safe }}
  </div>
</article>

