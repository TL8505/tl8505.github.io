---
layout: base.njk
---

<article class="post">
  <header class="post-header">
    <h1>{{ title }}</h1>
    <div class="post-meta">
      <time datetime="{{ date | date }}">{{ date | dateDisplay }}</time>
      {% if tags %}
      <div class="post-tags">
        {% for tag in tags %}
          {% if tag != "post" %}
          <span class="tag">{{ tag }}</span>
          {% endif %}
        {% endfor %}
      </div>
      {% endif %}
    </div>
  </header>
  <div class="post-content">
    {{ content | safe }}
  </div>
</article>

<nav class="post-navigation">
  <a href="/blog/">‚Üê Back to Blog</a>
</nav>